<UserControl
	x:Class="HotDeal.Views.DanawaView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:cvt="clr-namespace:HotDeal.Resources.Converters;assembly=HotDeal.Resources"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:items="clr-namespace:HotDeal.Items"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:prism="http://prismlibrary.com/"
	xmlns:units="clr-namespace:HotDeal.Resources.UI.Units;assembly=HotDeal.Resources"
	xmlns:views="clr-namespace:HotDeal.Views"
	prism:ViewModelLocator.AutoWireViewModel="True"
	mc:Ignorable="d">
	<UserControl.Resources>
		<cvt:BooleanToVisibilityCoverter x:Key="BooleanToVisibilityCoverter" />
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="1" Grid.Column="0">
			<TextBlock
				Margin="0,16,0,0"
				HorizontalAlignment="Center"
				FontFamily="{StaticResource NotoMedium}"
				FontSize="18"
				Foreground="{StaticResource DefaultForeground}"
				Text="ALL"
				TextAlignment="Center" />
			<Rectangle
				Width="300"
				Height="5"
				Margin="0,16,0,16"
				Fill="{StaticResource DefaultGradient}"
				StrokeThickness="0" />
		</StackPanel>
		<StackPanel Grid.Row="1" Grid.Column="1">
			<TextBlock
				Margin="0,16,0,0"
				HorizontalAlignment="Center"
				FontFamily="{StaticResource NotoMedium}"
				FontSize="18"
				Foreground="{StaticResource DefaultForeground}"
				Text="FILTERED"
				TextAlignment="Center" />
			<Rectangle
				Width="300"
				Height="5"
				Margin="0,16,0,16"
				Fill="{StaticResource DefaultGradient}"
				StrokeThickness="0" />
			<views:OrderButtonsView Margin="8,0,0,16" />
		</StackPanel>
		<ListView
			Grid.Row="2"
			Grid.Column="0"
			d:ItemsSource="{d:SampleData ItemCount=5}"
			Background="Transparent"
			BorderThickness="0"
			IsTabStop="False"
			ItemsSource="{Binding DanawaList}"
			ScrollViewer.HorizontalScrollBarVisibility="Disabled"
			ScrollViewer.VerticalScrollBarVisibility="Visible"
			VirtualizingPanel.ScrollUnit="Pixel">
			<ListBox.Template>
				<ControlTemplate>
					<units:ListScrollViewer>
						<ItemsPresenter />
					</units:ListScrollViewer>
				</ControlTemplate>
			</ListBox.Template>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<items:DanawaListItem />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ListView>
		<ListView
			d:ItemsSource="{d:SampleData ItemCount=4}"
			Background="Transparent"
			BorderThickness="0"
			IsTabStop="False"
			ItemsSource="{Binding DanawaFilterList}"
			ScrollViewer.HorizontalScrollBarVisibility="Disabled"
			ScrollViewer.VerticalScrollBarVisibility="Visible"
			VirtualizingPanel.ScrollUnit="Pixel">
			<ListBox.Template>
				<ControlTemplate>
					<units:ListScrollViewer>
						<ItemsPresenter />
					</units:ListScrollViewer>
				</ControlTemplate>
			</ListBox.Template>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<items:DanawaListItem />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ListView>
		<views:FilterSettingView
			Grid.Row="0"
			Grid.Column="0"
			Grid.ColumnSpan="2" />
		<Border
			Grid.Row="2"
			Grid.ColumnSpan="2"
			Margin="5"
			d:Visibility="Collapsed"
			Background="{StaticResource ItemBackground}"
			CornerRadius="12"
			Visibility="{Binding IsLoading.Value, Converter={StaticResource BooleanToVisibilityCoverter}}">
			<TextBlock
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				FontFamily="{StaticResource NotoMedium}"
				FontSize="36"
				Foreground="{StaticResource DefaultForeground}"
				Text="D Loading.."
				TextAlignment="Center" />
		</Border>
	</Grid>
</UserControl>
