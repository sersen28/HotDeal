<UserControl
	x:Class="HotDeal.Views.TitleView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:prism="http://prismlibrary.com/"
	xmlns:units="clr-namespace:HotDeal.Resources.UI.Units;assembly=HotDeal.Resources"
	prism:ViewModelLocator.AutoWireViewModel="True">
	<Grid Margin="0" Background="{StaticResource TitleBackground}">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<TextBlock
			Grid.Row="0"
			Margin="16,0,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			FontSize="16"
			FontWeight="Medium"
			Foreground="{StaticResource DefaultForeground}"
			Text="{Binding Title.Value}" />
		<units:CloseButton
			Grid.Row="0"
			Width="36"
			Height="36"
			HorizontalAlignment="Right"
			Background="Transparent" />
		<Rectangle
			Grid.Row="1"
			Height="4"
			HorizontalAlignment="Stretch"
			Fill="{StaticResource DefaultForeground}" />
	</Grid>
</UserControl>
